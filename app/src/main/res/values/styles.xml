<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!--<item name="colorBackground">@color/primaryLightColor</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SizeSpecificCollapsingToolbarLayout">
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">?attr/colorPrimary</item>
    </style>
    
    <style name="Tabs">
        <!--DIMENS-->
        <item name="android:paddingLeft">@dimen/padding_horizontal_tab</item>
        <item name="android:paddingRight">@dimen/padding_horizontal_tab</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_tab</item>

        <!--STYLE-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>

    </style>

</resources>
