<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_thumbnail_cardview"
                android:layout_width="@dimen/img_width_cardview"
                android:layout_height="@dimen/img_height_cardview"
                android:layout_marginRight="@dimen/padding_between_content_area"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:contentDescription="Imagem de miniatura filme"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textSize="@dimen/title_size"
                android:layout_toRightOf="@id/img_thumbnail_cardview"
                android:paddingTop="@dimen/padding_top_primary_title"/>

            <TextView
                android:id="@+id/tv_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle_size"
                android:layout_toRightOf="@id/img_thumbnail_cardview"
                android:layout_below="@id/tv_title"
                android:text="@string/avaliacao"/>

            <TextView
                android:id="@+id/label_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subtitle_size"
                android:layout_toRightOf="@id/tv_vote"
                android:layout_below="@id/tv_title"
                android:text=" /10"/>


            <TextView
                android:id="@+id/tv_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_bottom_primary_title"
                android:layout_toRightOf="@id/img_thumbnail_cardview"
                android:textSize="@dimen/subtitle_size"
                android:layout_below="@id/tv_vote"
                android:text="@string/data"/>

            <TextView
                android:id="@+id/tv_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_top_supporting_text"
                android:paddingBottom="@dimen/padding_bottom_supporting_text"
                android:layout_below="@id/tv_release"
                android:textSize="@dimen/text_size"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>

